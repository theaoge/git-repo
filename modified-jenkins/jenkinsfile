pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                // Clones the Git repository
                git url: 'https://github.com/theaoge/git-repo', branch: 'main'
            }
        }

        stage('Deploy') {
            steps {
                script {
                    // Apply the YAML deployment file using kubectl
                    sh 'kubectl apply -f path/to/jenkins-deployment.yaml'
                }
            }
        }
    }
}


