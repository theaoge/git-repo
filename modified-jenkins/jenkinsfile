pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                checkout([$class: 'GitSCM', 
                          branches: [[name: 'main']], 
                          userRemoteConfigs: [[url: 'https://github.com/theaoge/git-repo']]])
            }
        }
        stage('Deploy') {
            steps {
                script {
                    sh '/opt/homebrew/bin/kubectl apply -f /Users/starshu/modified-jenkins/jenkins-deployment.yaml'
                }
            }
        }
    }
}



